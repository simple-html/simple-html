{
    "name": "simple-html",
    "version": "2.0.4",
    "description": "Simple lib for creating web pages using lit-html and web components",
    "scripts": {
        "start": "node fuse",
        "build:all": "node ./scripts/build && node ./scripts/syncPackages",
        "clean:dist": "node ./scripts/clean",
        "sync": "node ./scripts/syncPackages",
        "publish:all": "node ./scripts/publish",
        "publish:test": "node ./scripts/publishTest",
        "typecheck": "node typecheck",
        "eslint": "npm run eslint:run:packages && npm run eslint:run:samples",
        "eslint:run:packages": "./node_modules/.bin/eslint --fix ./packages/**/*.ts",
        "eslint:run:samples": "./node_modules/.bin/eslint --fix ./samples/**/*.ts",
        "prettier:run": "node ./node_modules/prettier/bin-prettier --write \"packages/**/*.{json,md,ts}\" \"samples/**/*.{json,md,ts}\"",
        "test": "npm run rollup && jest",
        "test:watch": "npm run rollup && jest --watch ",
        "test-ci": "npm run rollup && jest",
        "coverage": "npm run rollup && jest --collectCoverage",
        "rollup": "./node_modules/.bin/rollup -c"
    },
    "author": "vegar Ringdal",
    "license": "MIT",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/jest": "^26.0.19",
        "@types/node": "^14.14.14",
        "@typescript-eslint/eslint-plugin": "^4.10.0",
        "@typescript-eslint/parser": "^4.10.0",
        "autoprefixer": "^10.1.0",
        "custom-elements-hmr-polyfill": "^1.0.3",
        "eslint": "^7.16.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.0",
        "fuse-box": "^4.0.0-next.447",
        "fuse-box-typechecker": "^3.0.1",
        "husky": "^4.3.6",
        "jest": "^26.6.3",
        "jest-environment-jsdom-sixteen": "^1.0.3",
        "lint-staged": "^10.5.3",
        "lit-html": "^1.3.0",
        "prettier": "^2.2.1",
        "rollup": "^2.35.1",
        "rollup-plugin-filesize": "^9.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat@2.0.2",
        "ts-jest": "^26.4.4",
        "typescript": "^4.1.3",
        "postcss": "^8.2.1"
    }
}
