{
    "name": "simple-html",
    "version": "3.5.1-next.2",
    "description": "Simple lib for creating web pages using lit-html and web components",
    "scripts": {
        "start": "ts-node config_devserver",
        "build:all": "node ./scripts/build",
        "clean:dist": "node ./scripts/clean",
        "sync": "node ./scripts/syncPackages",
        "publish:all": "node ./scripts/publish",
        "publish:test": "node ./scripts/publishTest",
        "typecheck": "node typecheck",
        "eslint": "npm run eslint:run:packages && npm run eslint:run:samples",
        "eslint:run:packages": "eslint --fix ./packages/**/*.ts",
        "eslint:run:samples": "eslint --fix ./samples/**/*.ts",
        "prettier:run": "prettier --write \"packages/**/*.ts\" \"samples/**/*.ts\"",
        "test": "npm run rollup && jest",
        "test:watch": "npm run rollup && jest --watch ",
        "test-ci": "npm run rollup && jest",
        "coverage": "npm run rollup && jest --collectCoverage",
        "rollup": "rollup -c",
        "release": "standard-version",
        "release-test": "standard-version  --dry-run",
        "release:minor": "standard-version --release-as minor",
        "release:patch": "standard-version --release-as patch",
        "release:major": "standard-version --release-as major",
        "release:next": "standard-version --prerelease next",
        "prepare": "husky install"
    },
    "author": "Vegar Ringdal",
    "license": "MIT",
    "standard-version": {
        "skip": {
            "commit": true
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@types/jest": "^26.0.23",
        "@types/node": "^15.0.2",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "autoprefixer": "^10.2.5",
        "custom-elements-hmr-polyfill": "^1.0.3",
        "esbuild-helpers": "0.0.3",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "fuse-box": "^4.0.0",
        "fuse-box-typechecker": "^3.1.1",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "jsdom": "^16.4.0",
        "lint-staged": "^11.0.0",
        "lit-html": "^1.4.1",
        "postcss": "^8.2.14",
        "prettier": "^2.3.0",
        "rollup": "^2.47.0",
        "rollup-plugin-filesize": "^9.1.1",
        "rollup-plugin-terser": "^7.0.2",
        "standard-version": "^9.3.0",
        "tailwindcss": "2.1.2",
        "ts-jest": "^26.5.6",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    }
}
