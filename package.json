{
    "name": "simple-html",
    "version": "3.6.0-next.1",
    "description": "Simple lib for creating web pages using lit-html and web components",
    "scripts": {
        "start": "ts-node config_devserver",
        "build:all": "node ./scripts/build",
        "clean:dist": "node ./scripts/clean",
        "sync": "node ./scripts/syncPackages",
        "publish:all": "node ./scripts/publish",
        "publish:test": "node ./scripts/publishTest",
        "typecheck": "node typecheck",
        "eslint": "npm run eslint:run:packages && npm run eslint:run:samples",
        "eslint:run:packages": "eslint --fix ./packages/**/*.ts",
        "eslint:run:samples": "eslint --fix ./samples/**/*.ts",
        "prettier:run": "prettier --write \"packages/**/*.ts\" \"samples/**/*.ts\"",
        "test": "npm run rollup && jest",
        "test:watch": "npm run rollup && jest --watch ",
        "test-ci": "npm run rollup && jest",
        "coverage": "npm run rollup && jest --collectCoverage",
        "rollup": "rollup -c",
        "release": "standard-version",
        "release-test": "standard-version  --dry-run",
        "release:minor": "standard-version --release-as minor",
        "release:patch": "standard-version --release-as patch",
        "release:major": "standard-version --release-as major",
        "release:next": "standard-version --prerelease next",
        "prepare": "husky install"
    },
    "author": "Vegar Ringdal",
    "license": "MIT",
    "standard-version": {
        "skip": {
            "commit": true
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@types/jest": "^26.0.23",
        "@types/node": "^15.12.2",
        "@typescript-eslint/eslint-plugin": "^4.26.1",
        "@typescript-eslint/parser": "^4.26.1",
        "autoprefixer": "^10.2.6",
        "custom-elements-hmr-polyfill": "^1.0.3",
        "esbuild": "^0.12.8",
        "esbuild-helpers": "0.0.6",
        "eslint": "^7.28.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^6.0.0",
        "jest": "^27.0.4",
        "jsdom": "^16.6.0",
        "lint-staged": "^11.0.0",
        "lit-html": "^1.4.1",
        "minify-html-literals": "^1.3.5",
        "postcss": "^8.3.1",
        "prettier": "^2.3.1",
        "rollup": "^2.51.1",
        "rollup-plugin-filesize": "^9.1.1",
        "rollup-plugin-terser": "^7.0.2",
        "standard-version": "^9.3.0",
        "tailwindcss": "^2.1.4",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.2"
    }
}
